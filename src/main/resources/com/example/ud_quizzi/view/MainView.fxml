<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ud_quizzi.view.MainController">

    <!-- Header -->
    <top>
        <Label text="Quizzi App" style="-fx-font-size: 24px; -fx-padding: 10;" />
    </top>

    <!-- Center: Table hiển thị danh sách câu hỏi -->
    <center>
        <TableView fx:id="questionTable" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="contentColumn" text="Câu hỏi" prefWidth="400"/>
                <TableColumn fx:id="answerColumn" text="Đáp án" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <!-- Bottom: Nút thao tác -->
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Thêm câu hỏi" onAction="#handleAddQuestion"/>
            <Button text="Xóa câu hỏi" onAction="#handleDeleteQuestion"/>
        </HBox>
    </bottom>

</BorderPane>
