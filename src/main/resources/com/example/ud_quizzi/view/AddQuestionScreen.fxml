<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.ud_quizzi.view.AddQuestionController"
           prefWidth="500" prefHeight="550"
           style="-fx-background-color: linear-gradient(to bottom right, #f0f8ff, #e6f0ff);">

    <GridPane hgap="15" vgap="20" alignment="CENTER">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Title -->
        <Label text="THÊM CÂU HỎI" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
               GridPane.halignment="CENTER"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: black;"/>

        <!-- Content -->
        <Label text="Nội dung:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: black;"/>
        <TextField fx:id="contentField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   prefWidth="300"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;">
            <style>
                .text-field:focused {
                -fx-border-color: #87CEFA;
                }
            </style>
        </TextField>

        <!-- Option A -->
        <Label text="Option A:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: black;"/>
        <TextField fx:id="optionAField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                   prefWidth="300"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- Option B -->
        <Label text="Option B:" GridPane.rowIndex="3" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: black;"/>
        <TextField fx:id="optionBField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                   prefWidth="300"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- Option C -->
        <Label text="Option C:" GridPane.rowIndex="4" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: black;"/>
        <TextField fx:id="optionCField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                   prefWidth="300"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- Option D -->
        <Label text="Option D:" GridPane.rowIndex="5" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: black;"/>
        <TextField fx:id="optionDField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                   prefWidth="300"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- Answer -->
        <Label text="Đáp án:" GridPane.rowIndex="6" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: black;"/>
        <TextField fx:id="answerField" GridPane.rowIndex="6" GridPane.columnIndex="1"
                   prefWidth="300"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <Button text="➕ Thêm" onAction="#handleAdd" prefWidth="140" prefHeight="40"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-font-size: 14px;"/>
            <Button text="⬅ Trở lại" onAction="#handleBack" prefWidth="140" prefHeight="40"
                    style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-font-size: 14px;"/>
        </HBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"
               GridPane.halignment="CENTER" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
    </GridPane>
</StackPane>
