<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.ud_quizzi.view.AddQuestionController"
           prefWidth="500" prefHeight="500">

<!--&lt;!&ndash; Background Image &ndash;&gt;-->
<!--<ImageView fx:id="RegisterForm" preserveRatio="false" pickOnBounds="true"-->
<!--           fitWidth="500" fitHeight="500"/>-->

<!-- Form -->
<GridPane hgap="10" vgap="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Add Question" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
           GridPane.halignment="CENTER"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>

    <!-- Content -->
    <Label text="Content:" GridPane.rowIndex="1" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
    <TextField fx:id="contentField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <!-- Option A -->
    <Label text="Option A:" GridPane.rowIndex="2" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
    <TextField fx:id="optionAField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Option B -->
    <Label text="Option B:" GridPane.rowIndex="3" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
    <TextField fx:id="optionBField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Option C -->
    <Label text="Option C:" GridPane.rowIndex="4" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
    <TextField fx:id="optionCField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Option D -->
    <Label text="Option D:" GridPane.rowIndex="5" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
    <TextField fx:id="optionDField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Answer -->
    <Label text="Answer:" GridPane.rowIndex="6" GridPane.columnIndex="0"
           GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
    <TextField fx:id="answerField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Button text="Add" onAction="#handleAdd" prefWidth="120"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
    </HBox>

    <!-- Message Label -->
    <Label fx:id="messageLabel" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"
           GridPane.halignment="CENTER" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
</GridPane>
</StackPane>
