<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.ud_quizzi.view.AddExamController"
           prefWidth="650" prefHeight="500"
           style="-fx-background-color: linear-gradient(to bottom right, #f0f8ff, #e6f0ff);">

    <GridPane hgap="20" vgap="25" alignment="CENTER">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Title -->
        <Label text="THÊM ĐỀ THI" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
               GridPane.halignment="CENTER"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: black;"/>

        <!-- examName -->
        <Label text="Tên đề thi:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT"
               style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: black;"/>
        <TextField fx:id="examNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   prefWidth="350"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- createdBy -->
        <Label text="Người tạo:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT"
               style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: black;"/>
        <TextField fx:id="createdByField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                   prefWidth="350"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- testTime -->
        <Label text="Thời gian làm bài (phút):" GridPane.rowIndex="3" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT"
               style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: black;"/>
        <TextField fx:id="testTimeField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                   prefWidth="350"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #87CEFA;"/>

        <!-- Buttons -->
        <HBox spacing="25" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <Button text="➡ Tiếp theo" onAction="#handleNext" prefWidth="150" prefHeight="45"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-font-size: 15px;"/>
            <Button text="⬅ Trở lại" onAction="#handleBack" prefWidth="150" prefHeight="45"
                    style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-font-size: 15px;"/>
        </HBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"
               GridPane.halignment="CENTER" style="-fx-text-fill: red; -fx-font-size: 13px;"/>
    </GridPane>
</StackPane>
