<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ud_quizzi.view.LoginController"
            prefWidth="500" prefHeight="250">

    <!-- Ảnh nền bên trái -->
    <ImageView fx:id="backgroundImage" fitWidth="300" fitHeight="250" layoutX="0" layoutY="0"/>

    <!-- Ảnh phụ bên phải -->
    <ImageView fx:id="sideImage" fitWidth="200" fitHeight="250" layoutX="300" layoutY="0"/>

    <!-- Form đăng nhập bên trái (đặt trên ảnh nền bên trái) -->
    <VBox spacing="15" alignment="CENTER" layoutX="0" layoutY="40" prefWidth="300">
        <Label text="Login Quizzi" alignment="CENTER"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" />

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="130"/>

            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="130"/>
        </GridPane>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Login" onAction="#handleLogin" prefWidth="80"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Register" onAction="#handleRegister" prefWidth="80"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" alignment="CENTER"/>
    </VBox>
</AnchorPane>
