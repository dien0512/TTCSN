<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ud_quizzi.view.LoginController"
            prefWidth="400" prefHeight="300">

    <!-- Background Image -->
    <ImageView fx:id="loginForm" fitWidth="400" fitHeight="300" layoutX="0" layoutY="0"/>

    <!-- Form Container -->
    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="60" prefWidth="300">
        <!-- Title -->
        <Label text="Login Quizzi" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" />

        <!-- Input Fields -->
        <GridPane hgap="10" vgap="10">
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="180"/>

            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="180"/>
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Login" onAction="#handleLogin" prefWidth="100"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Register" onAction="#handleRegister" prefWidth="100"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" alignment="CENTER"/>
    </VBox>
</AnchorPane>
