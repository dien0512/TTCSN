<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.HPos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.ud_quizzi.view.RegisterController"
           prefWidth="500" prefHeight="500">

    <!-- Background Image -->
    <ImageView fx:id="RegisterForm" preserveRatio="false" pickOnBounds="true"
               fitWidth="500" fitHeight="500"/>

    <!-- Form -->
    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Title -->
        <Label text="Register User" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
               GridPane.halignment="CENTER"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>

        <!-- Username -->
        <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Password -->
        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Full Name -->
        <Label text="Full Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
        <TextField fx:id="fullNameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Email -->
        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
        <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Phone -->
        <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Role -->
        <Label text="Role:" GridPane.rowIndex="6" GridPane.columnIndex="0"
               GridPane.halignment="RIGHT" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
        <ChoiceBox fx:id="roleChoiceBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <Button text="Register" onAction="#handleRegister" prefWidth="120"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Button text="Back" onAction="#handleBack" prefWidth="120"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
        </HBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"
               GridPane.halignment="CENTER" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
    </GridPane>
</StackPane>
